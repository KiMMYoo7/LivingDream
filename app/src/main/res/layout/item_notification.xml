<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/lavender_border"> <!-- Set the custom border background here -->

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/bmiValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI: 22.5"
        android:textSize="14sp"
        android:textColor="#444444"
        android:visibility="gone"/> <!-- Start with visibility as 'gone' for flexibility in Java code -->

</LinearLayout>
